<?xml version="1.0"?>
<object name="HelpCenterKnowledgeBase"
   meta_type="Factory-based Type Information with dynamic views"
   i18n:domain="plonehelpcenter"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title">Knowledge Base</property>
 <property name="description">Organizes howtos and tutorials by topic and audience</property>
 <property name="icon_expr">string:${portal_url}/helpcenter_icon.gif</property>
 <property name="content_meta_type">HelpCenterKnowledgeBase</property>
 <property name="product">PloneHelpCenter</property>
 <property name="factory">addHelpCenterKnowledgeBase</property>
 <property name="immediate_view">phcfolder_view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
   <element value="HelpCenterTutorial"/>
   <element value="HelpCenterHowTo"/>
   <element value="Topic"/>
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view">phcfolder_view</property>
 <property name="view_methods">
  <element value="phcfolder_view"/>
  <element value="folder_summary_view"/>
  <element value="folder_tabular_view"/>
  <element value="folder_listing"/>
  <element value="helpcenter_topicview"/>
  <element value="helpcenter_topicview_main"/>
 </property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="atct_edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(selected layout)"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${folder_url}/" visible="True"
    i18n:attributes="title">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True"
    url_expr="string:${object_url}/edit" visible="True"
    i18n:attributes="title">
  <permission value="Modify portal content"/>
 </action>
</object>
